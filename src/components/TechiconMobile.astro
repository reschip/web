---
// src/components/TechIconMobile.astro
interface Props {
  iconSrc: string; // URL del icono (ej. SVG de Devicon)
  iconName: string; // Nombre de la tecnolog√≠a (ej. "Python")
  class?: string; 
}

const { iconSrc, iconName,class: className} = Astro.props;
---
<div class={`flex flex-col w-15 items-center ${className || ''}`}> 
  <img class="w-8 h-8 mt-1.5" src={iconSrc} alt={iconName + " icon"} />
  <p class="mb-1.5 mt-1.5 text-xs font-medium text-center">{iconName}</p>
</div>